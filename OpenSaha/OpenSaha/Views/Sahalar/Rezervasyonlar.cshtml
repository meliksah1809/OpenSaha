@model Rezervasyon;
@{
    ViewData["Title"] = "Rezervasyonlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
		<div class="tg-banner tg-haslayout">
			<div class="tg-imglayer">
				<img src="~/site/images/bg-pattran.png" alt="image desctription">
			</div>
			<div class="container">
				<div class="row">
					<div class="tg-banner-content tg-haslayout">
						<div class="tg-pagetitle">
							<h1>Randevu Oluştur</h1>
						</div>
						<ol class="tg-breadcrumb">
							<li><a href="/Home">Home</a></li>
							<li class="active">Randevu Oluştur</li>
						</ol>
					</div>
				</div>
			</div>
		</div>

		<section class="tg-main-section tg-haslayout">
				<div class="container">
					<div class="tg-section-name">
						<h2>Randevu Oluştur</h2>
					</div>
					<div class="col-sm-11 col-xs-11 pull-right">
						<div class="row">
							<div class="tg-topratedplayer tg-haslayout">
								<div class="row">
									<div class="col-md-7 col-sm-12 col-xs-12">
              <form action="~/Sahalar/Rezervasyonlar/" method="post">
                <div class="card-body">
                    <div class="row">
				   <div class="col-md-5">     
                  <div class="form-group">
                    <label>saha</label> 
                    <input type="text" class="form-control" value="@ViewBag.baslik" readonly>
                  </div> 
                  <div class="form-group">
                    <label>Randevu Başlangıç Tarihi</label> 
                    <input type="datetime-local" class="form-control" asp-for="RandevuBaslangic" placeholder="Randevu Başlangıç Tarihi">
                  </div>                      
                  <div class="form-group">
                    <label>Randevu Bitiş Tarihi</label> 
                    <input type="datetime-local" class="form-control" asp-for="RandevuBitis" placeholder="Randevu Bitiş Tarihi">
                  </div>  
				 <div class="form-group">
                    <label>Eşleşme</label> 
                    <input type="text" class="form-control" asp-for="EslesmeId" placeholder="Eşleşme">
                  </div>      
                    <input type="hidden" class="form-control" asp-for="Id">
                    <input type="hidden" class="form-control" asp-for="YoneticiId" value="@ViewBag.yid">
				    <input type="hidden" class="form-control" asp-for="KullaniciId" placeholder="Kullanıcı Adı" value="@ViewBag.kid">
				    <input type="hidden" class="form-control" asp-for="SahaId" placeholder="Kullanıcı Adı" value="@ViewBag.sha">
                  </div>
                 </div>
                </div>
                <div class="card-footer">
					 <button type="submit" class="tg-btn tg-btn-lg">Randevu Oluştur</button>
                </div>
              </form> 
                 </div>
					<div class="signup-image col-sm-5 col-xs-5 pull-right">
								@await Component.InvokeAsync("HizliRez", new{sahaid = ViewBag.sha})
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

