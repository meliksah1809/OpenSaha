@model OpenSaha.ViewModels.Account.Eslesmeler
@{
    ViewData["Title"] = "Eslesme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
		<div class="tg-banner tg-haslayout">
			<div class="tg-imglayer">
				<img src="~/site/images/bg-pattran.png" alt="image desctription">
			</div>
			<div class="container">
				<div class="row">
					<div class="tg-banner-content tg-haslayout">
						<div class="tg-pagetitle">
							<h1>Takımlar</h1>
						</div>
						<ol class="tg-breadcrumb">
							<li><a href="">Home</a></li>
							<li class="active">Takımlar</li>
						</ol>
					</div>
				</div>
			</div>
		</div>

				<main id="tg-main" class="tg-main tg-haslayout">
			<section class="tg-main-section tg-haslayout">
				<div class="container">
					<div class="tg-section-name">
						<h2>Rakip Takımlar</h2>
					</div>
					<div class="col-sm-11 col-xs-11 pull-right">
						<div class="row">	
						<div class="tg-ticket">
									<time class="tg-matchdate" datetime="2016-05-03">@Model.TakimTakvim.TarihBaslangic.Day<span>@Model.TakimTakvim.TarihBaslangic.ToString("MMMM")</span></time>
									<div class="tg-matchdetail">
