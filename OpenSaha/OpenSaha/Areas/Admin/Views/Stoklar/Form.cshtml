@model OpenSaha.Models.Cafe
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Cafe Güncelle</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">DataTables</li>
            </ol>
          </div>
        </div>
      </div>
    </section>
  
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">       
       <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Cafe</h3>
              </div>              
              <form asp-action="Form" asp-controller="Cafe">
                <div class="card-body">
                    <div class="row">
                      <div class="col-md-3">   
                  <div class="form-group">
                    <label>Ürün Adı</label> 
                    <input type="text" class="form-control" asp-for="Baslik" placeholder="Ürün Adı">
                  </div> 
                  <div class="form-group">
                    <label>Adeti</label> 
                    <input type="text" class="form-control" asp-for="Adet" placeholder="Fiyatı">
                  </div>                 
                  <div class="form-group">
                    <label>Fiyatı</label> 
                    <input type="text" class="form-control" asp-for="Fiyat" placeholder="Tarihi">
                  </div> 
                  <div class="form-group">
                    <label>Tarihi</label> 
                    <input type="datetime-local" class="form-control" asp-for="Tarih" placeholder="Güncelleme Tarihi">
                  </div>                 
                  <div class="form-group">
                    <label>Güncelleme Tarihi</label> 
                    <input type="datetime-local" class="form-control" asp-for="GuncellemeTarih" placeholder="Güncelleme Tarihi">
                  </div>                 
                 </div>
                     <div class="col-md-3">
                  <div class="form-group">
                    <label>Kodu</label> 
                    <input type="text" class="form-control" asp-for="YoneticiId" placeholder="StokId">
                  </div>
                  <div class="form-group">
                    <label>Barkodu</label> 
                    <input type="text" class="form-control" asp-for="Barkod" placeholder="kodu">
                  </div>  
                  <div class="form-group">
                    <label>Saha Adı</label> 
                    <input type="text" class="form-control" asp-for="SahaId" placeholder="barkod">
                  </div> 
                </div>
             </div>
            </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
              </form>
            </div>            
           </div>
        </div>
      </div>
    </section>

                                        @section Scripts{
                                            <script type="text/javascript">
        $(function () {
            $("#ddlSehirler").each(function () {
                if ($(this).find("option").length <= 1) {
                    $(this).attr("disabled", "disabled");
                }
            });
            $("#ddlSehirler").change(function () {
                var value = 0;
                if ($(this).val() != "") {
                    value = $(this).val();
                }
                var id = $(this).attr("id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("SehirAjax","Home", new { Area=""})",
                    data: { value: value, type: id },
                    success: function (response) {
                        switch (id) {
                            case "ddlSehirler":
                                DisableDropDown("#ddlIlceler");
                                PopulateDropDown("#ddlIlceler", response.ilce);
                                break;
                        }
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
        function DisableDropDown(dropDownId) {
            $(dropDownId).attr("disabled", "disabled");
            $(dropDownId).empty().append('<option selected="selected" value="0">Seçiniz</option>');
        }
        function PopulateDropDown(dropDownId, list) {
            if (list != null && list.length > 0) {
                $(dropDownId).removeAttr("disabled");
                $.each(list, function () {
                    $(dropDownId).append($("<option></option>").val(this['value']).html(this['text']));
                });
            }
        }
    </script>
                                      }


