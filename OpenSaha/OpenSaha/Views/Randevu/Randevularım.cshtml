@model List<Rezervasyon>
@{
    ViewData["Title"] = "Randevularım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
		<div class="tg-banner tg-haslayout">
			<div class="tg-imglayer">
				<img src="~/site/images/bg-pattran.png" alt="image desctription">
			</div>
			<div class="container">
				<div class="row">
					<div class="tg-banner-content tg-haslayout">
						<div class="tg-pagetitle">
							<h1>Randevularım</h1>
						</div>
						<ol class="tg-breadcrumb">
							<li><a href="/home">Home</a></li>
							<li class="active">Randevularım</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
		
				<main id="tg-main" class="tg-main tg-haslayout">
			<section class="tg-main-section tg-haslayout">
				<div class="container">
					<div class="tg-section-name">
						<h2>Randevularım</h2>
					</div>
					<div class="col-sm-11 col-xs-11 pull-right">
						<div class="row">

					@foreach(var tkm in Model)
					{
						<div class="tg-ticket">
									<time class="tg-matchdate" datetime="2016-05-03">@DateTime.Now.Day<span>june</span></time>
									<div class="tg-matchdetail">
										<span class="tg-theme-tag">@tkm.Kullanici.Isim @tkm.Kullanici.Soyisim</span>
										<h4>@tkm.Saha.Baslik</h4>
										<ul class="tg-matchmetadata">											
											<li><address>@tkm.RandevuBaslangic <span>=></span> @tkm.RandevuBitis</address></li>
										</ul>
									</div>
									<div class="tg-btnsbox">
										<a class="tg-btn" href="#">read more</a>
										<a class="tg-btn" href="#">book my ticket</a>
									</div>
								</div>
					}
							</div>
						</div>
					</div>
			</section>
		</main>

