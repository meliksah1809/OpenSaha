@model OpenSaha.Models.CafeTakip
@{
    ViewData["Title"] = "CafeTakip";
    Layout = "~/Views/Shared/_KontrolLayout.cshtml";
}
<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Ürün İşlemleri</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">DataTables</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

<div class="card card-warning">
              <div class="card-header">
                <h3 class="card-title">Ürün Ekleme</h3>
              </div>
              <div class="card-body">
              <form action="~/kontrol/Rezervasyon/CafeTakip" method="post">
                <div class="card-body">
                    <div class="row">
                      <div class="col-md-3">
                  <div class="form-group">
                    <label>Ürün Barkodu</label> 
                    <select class="form-control" asp-for="CafeId"  asp-items="@ViewBag.ekp"></select>
                  </div>                  
                  <div class="form-group">
                    <label>Adet</label> 
                    <input type="text" class="form-control" asp-for="Adet" placeholder="Adeti">
                  </div>                      
                    <input type="hidden" class="form-control" asp-for="Ucret">
                    <input type="hidden" class="form-control" asp-for="YoneticiId" value="@ViewBag.yid">                
                    <input type="hidden" class="form-control" asp-for="RezervasyonId" value="@ViewBag.rezid">
                     </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
              </form>
             </div>
            </div>
