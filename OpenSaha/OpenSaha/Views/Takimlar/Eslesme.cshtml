											<li><address>@Model.KullaniciEkip.SehirListe.SehirAdi,@Model.KullaniciEkip.IlceListe.IlceAdi</address></li>*@
										</ul>
										<ul class="tg-matchmetadata">
											<li><address><i class="fas fa-calendar-alt"></i> @Model.TakimTakvim.TarihBaslangic.ToString("dd.MM.yyyy HH:ss") - <i class="fas fa-calendar-alt"></i> @Model.TakimTakvim.TarihBitis.ToString("dd.MM.yyyy HH:ss")</address></li>
										</ul>
									</div>
									<div class="tg-btnsbox">
									</div>
								</div>
							</div>
						</div>
					</div>
			</section>
		</main>


